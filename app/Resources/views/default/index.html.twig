{% extends 'base.html.twig' %}

{% block body %}
    <div id="welcome">
        <h1 class="text-center">Pet Finder</h1>
    </div>

    <div id="search" class="container text-center">

        <div class="row show-grid">
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" placeholder="Ex: Atlanta, GA or 30303" name="location" id="location">
                </div>
                <div class="form-group">
                    <select id="type" name="type" class="form-control">
                        <option value="any">Any</option>
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                        <option value="rabbit">Rabbit</option>
                        <option value="smallFurry">Small &amp; Furry</option>
                        <option value="horse">Horse</option>
                        <option value="bird">Bird</option>
                        <option value="scalesFinsOther">Scales, Fins &amp; Others</option>
                        <option value="pig">Pig</option>
                        <option value="barnyard">Barnyard</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="breed" placeholder="Breed" id="breed">
                </div>
                <button type="submit" class="btn btn-default" id="searchButton">Search</button>
            </form>
        </div>

        <div class="row show-grid nextDiv" style="display: none;">
            <button class="btn btn-primary pull-right">Next</button>
        </div>

        <div id="petContent" class="row text-center">
            <img id="loadingImage" src="{{ asset('/loading.gif') }}" style="display: none;" width="200px" height="200px">

        </div>

        <div class="row show-grid nextDiv" style="display: none;">
            <button class="btn btn-primary pull-right">Next</button>
        </div>

    </div>

    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 petColumn" id="displayTemplate" style="display: none;">


        <p class="petDescription">
            <h3 class="petName"><a href="#" data-toggle="modal" data-target="#moreInfo">Pet Name</a></h3>

            <span class="petAttributes">Age * Gender * Size</span>

            <br />

            <div id="moreInfo" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title petName"> Pet Name  </h4>
                        </div>
                        <div class="modal-body">
                            <img src="" alt="Pet Image" class="petImage img-responsive center-block"> <br /> <br />
                            <p class="text-justify modalPetAttributes">Age * Gender * Size</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>

        </p>

        <a href="#" data-toggle="modal" data-target="#myModal">
            <img src="" alt="Pet Image" class="petImage img-responsive center-block thumbnail">
        </a>

    </div>

{% endblock %}
