{% extends 'base.html.twig' %}

{% block body %}
    <div id="welcome">
        <h1 class="text-center">Pet Finder</h1>
    </div>

    <div id="search" class="container text-center">

        <div class="row show-grid">
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" placeholder="Ex: Atlanta, GA or 30303" name="location" id="location">
                </div>

                <div class="form-group">
                    <select id="type" name="type" class="form-control">
                        <option value="any">Animal Type - Any</option>
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                        <option value="rabbit">Rabbit</option>
                        <option value="smallfurry">Small &amp; Furry</option>
                        <option value="horse">Horse</option>
                        <option value="bird">Bird</option>
                        <option value="reptile">Scales, Fins &amp; Others</option>
                        <option value="pig">Pig</option>
                        <option value="barnyard">Barnyard</option>
                    </select>
                </div>

                <div class="form-group">
                    <select id="breed" name="breed" class="form-control">
                        <option value="any">Breed - Any</option>
                    </select>

                </div>

                <button type="submit" class="btn btn-default" id="searchButton">Search</button>
                <button class="btn btn-primary" id="randomButton">Random!</button>

                <input id="pageOffset" type="hidden" value="0" name="pageOffset" />
                <input id="pageSort" type="hidden" value="" name="pageSort" />
            </form>
        </div>

        <div id="errorMessage" class="alert alert-danger" style="display: none;">
            Please input a valid location. Ex: Atlanta, GA or 30303
        </div>

        <div id="noPetsMessage" class="alert alert-warning" style="display: none;">
            We were unable to find any pets matching your search criteria. <br />
            Please update your search criteria and try again.
        </div>

        <div class="row show-grid nextDiv" style="display: none;">
            <button class="btn btn-default pull-left navButton prevButton" disabled="disabled">Prev</button>
            <button class="btn btn-primary pull-right navButton nextButton">Next</button>
        </div>

        <div class="btn-group" id="sortDiv" style="display: none;">
            <button id="sortingButton" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortmenu">
                <li><a href="#" class="sortBy" data-default="Name">Name</a></li>
                <li><a href="#" class="sortBy" data-default="Gender">Gender</a></li>
                <li><a href="#" class="sortBy" data-default="Size">Size</a></li>
            </ul>
        </div>

        <div id="petContent" class="row text-center">
            <img id="loadingImage" src="{{ asset('/loading.gif') }}" style="display: none;" width="200px" height="200px">

        </div>

        <div class="row show-grid nextDiv" style="display: none;">
            <button class="btn btn-default pull-left navButton prevButton" disabled="disabled">Prev</button>
            <button class="btn btn-primary pull-right navButton nextButton">Next</button>
        </div>

    </div>



    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 petColumn" id="displayTemplate" style="display: none;">


        <p class="petDescription">
            <h3 class="petName"><a href="#" data-toggle="modal" data-target="#moreInfo">Pet Name</a></h3>

            <span class="petType">Cat - Calico</span> <br />

            <span class="petAttributes">Age * Gender * Size</span>

            <br />

            <div id="moreInfo" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title petName"></h4>
                        </div>
                        <div class="modal-body">
                            <img src="http://placehold.it/250x250" alt="Pet Image" class="petImage img-responsive center-block"> <br /> <br />
                            <p class="text-justify modalPetAttributes"></p>
                            <p class="text-center modalPetContact"></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>

        </p>

        <a href="#" data-toggle="modal" data-target="#myModal">
            <img src="http://placehold.it/250x250" alt="Pet Image" class="petImage img-responsive center-block thumbnail">
        </a>

    </div>

{% endblock %}
